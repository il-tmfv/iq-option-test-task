select:-moz-focusring
  color transparent;
  text-shadow: 0 0 0 #000;

input-style()
  box-sizing border-box
  border-radius 5px
  border 1px solid black
  outline none
  height 40px
  width 100%
  padding-left 6px
  font-size 14px

arrow()
  background-image url("../down.svg")
  background-size 15px 15px
  background-color transparent
  background-repeat no-repeat
  background-position calc(100% - 6px) center

.select
  width 300px
  box-sizing border-box
  position relative
  input
    input-style()
    arrow()
  select
    input-style()
    arrow()
    -webkit-appearance none
    -moz-appearance none

.select__menu
  box-sizing border-box
  position absolute
  overflow auto
  border-radius 5px
  border 1px solid black
  width 300px

.menu-item
  height 40px
  padding-left 6px
  line-height 40px
  vertical-align middle

.placeholder
  font-size 14px
  transition all 400ms
  margin-left 5px
  position absolute
  top 13px
  left 3px
  background-color white
  user-select none
  padding 0 2px

.select_with-value
  label
    transform scale(0.857) translate(-17px, -25px)