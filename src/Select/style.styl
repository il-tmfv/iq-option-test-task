select:-moz-focusring
  color transparent;
  text-shadow: 0 0 0 #000;

.select
  width 300px
  position relative
  select
    border-radius 5px
    border 1px solid black
    -webkit-appearance none
    -moz-appearance none
    outline none
    height 40px
    width 100%
    padding-left 6px
    font-size 14px
    background-image url("../down.svg")
    background-size 15px 15px
    background-color transparent
    background-repeat no-repeat
    background-position calc(100% - 6px) center

.placeholder
  font-size 14px
  transition all 400ms
  margin-left 5px
  position absolute
  top 13px
  left 3px
  background-color white
  user-select none

.select_with-value
  label
    transform scale(0.857) translate(-8px, -25px)